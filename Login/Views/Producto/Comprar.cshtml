@model OrdenCompra

@{
    ViewData["Title"] = "Create";
}

<h4>Orden de Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Comprar" asp-controller="Producto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductoID" class="control-label" hidden></label>
                <input asp-for="ProductoID" class="form-control" asp-items="ProductoID" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioID" class="control-label" hidden></label>
                <input asp-for="UsuarioID" class="form-control" asp-items="UsuarioID" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label" hidden></label>
                <input asp-for="Fecha" class="form-control" asp-items="Fecha" hidden/>
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label" hidden></label>
                <select asp-for="Estado" class="form-control" hidden>
                    <option value="1" selected>Created</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label" ></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
