@model List<RolUsuarioModelo>

@{
    var id = ViewBag.IdUsuario;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Gestionar Roles Usuario</h2>
        </div>
    </div>
    <div class="card-body">
        @for (int i = 0; i < Model.Count; i++)
        {

            <div class="form-check m-2">
                <input type="hidden" asp-for="@Model[i].RolId" />
                <input type="hidden" asp-for="@Model[i].RolNombre" />
                <input asp-for="@Model[i].EstaSeleccioando" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].EstaSeleccioando">
                    @Model[i].RolNombre
                </label>

            </div>
        }
        <div class="card-footer">
            <input type="submit" value="Actualizar" class="btn btn-primary" />
            <a asp-action="EditarUsuario" asp-route-id="@id" class="btn btn-primary" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>