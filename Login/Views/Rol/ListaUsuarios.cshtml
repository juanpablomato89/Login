@model IEnumerable<Usuario>

@{
    ViewBag.Title = "Listado de Usuarios";
}

<h1>Todos los Usuarios</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Registro"
       asp-controller="Cuentas">Nuevo Usuario</a>

    foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id:@item.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.UserName</h5>
            </div>
            <div class="card-footer">
                <form method="post" asp-controller="Rol" asp-action="BorrarUsuario" asp-route-id="@item.Id">
                    <a style="width:auto" asp-action="EditarUsuario" asp-controller="Rol" asp-route-id="@item.Id"
                       class="btn btn-primary">Editar</a>
                     <button type="submit" class="btn btn-danger"
                             onclick="return confirm('Seguro que quieres borrar el usuario:@item.UserName')">Borrar</button>                   
                </form>


            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Aun no existen Usuarios Creados
        </div>
        <div class="card-body">
            <h5 class="card-title">Usa este boton para crear un Usuarios</h5>
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto" asp-action="Registro"
               asp-controller="Cuentas">Crear Rol</a>
        </div>
    </div>
}
@section Scripts{
    <script src="~/js/site.js"></script>
}
