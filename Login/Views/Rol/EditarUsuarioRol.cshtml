@model List<UsuarioRolModelo>

@{ 
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Agregar o Borrar Usuarios a este Rol</h2>
        </div>
    </div>
    <div class="card-body">
        @for (int i = 0; i < Model.Count; i++)
        {
            
        <div class="form-check m-2">
            <input type="hidden" asp-for="@Model[i].UsuarioId" />
            <input type="hidden" asp-for="@Model[i].UsuarioNombre" />
            <input type="hidden" asp-for="@roleId" />
            <input asp-for="@Model[i].EstaSeleccioando" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model[i].EstaSeleccioando">
                @Model[i].UsuarioNombre
            </label>

        </div>
        }
        <div class="card-footer">
            <input type="submit" value="Actualizar" class="btn btn-primary"/>
            <a asp-action="EditarRol" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>